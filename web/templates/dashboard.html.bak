<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/static/css/main.css">
    <!-- <script src="/static/js/charts.min.js"></script> -->
</head>
<body>
    <header>
        <div class="logo">
            <h1>PramaIA LogService</h1>
        </div>
        <nav>
            <ul>
                <li><a href="/dashboard" class="active">Dashboard</a></li>
                <li><a href="/dashboard/search">Ricerca</a></li>
                <!-- <li><a href="/dashboard/stats">Statistiche</a></li> -->
                <li><a href="/dashboard/logservice">LogService</a></li>
                <!-- <li><a href="/dashboard/settings">Impostazioni</a></li> -->
            </ul>
        </nav>
    </header>

    <main>
        <section class="overview">
            <h2>Panoramica</h2>
            <div class="stats-cards">
                <div class="card">
                    <h3>Totale Log</h3>
                    <p class="big-number">{{ stats.total_logs }}</p>
                </div>
                <div class="card">
                    <h3>Errori</h3>
                    <p class="big-number">{{ stats.logs_by_level.get('error', 0) + stats.logs_by_level.get('critical', 0) }}</p>
                </div>
                <div class="card">
                    <h3>Avvisi</h3>
                    <p class="big-number">{{ stats.logs_by_level.get('warning', 0) }}</p>
                </div>
                <div class="card">
                    <h3>Info</h3>
                    <p class="big-number">{{ stats.logs_by_level.get('info', 0) }}</p>
                </div>
            </div>
            
            <!-- Grafici temporaneamente disabilitati
            <div class="charts-container">
                <div class="chart">
                    <h3>Log per livello</h3>
                    <canvas id="levelChart"></canvas>
                </div>
                <div class="chart">
                    <h3>Log per progetto</h3>
                    <canvas id="projectChart"></canvas>
                </div>
            </div>
            -->
        </section>

        <section class="recent-logs">
            <h2>Log Recenti</h2>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Timestamp</th>
                            <th>Progetto</th>
                            <th>Livello</th>
                            <th>Modulo</th>
                            <th>Messaggio</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for log in logs %}
                        <tr class="log-level-{{ log.level }}">
                            <td>{{ log.timestamp }}</td>
                            <td>{{ log.project }}</td>
                            <td>{{ log.level }}</td>
                            <td>{{ log.module }}</td>
                            <td>{{ log.message }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>
    </main>

    <footer>
        <p>&copy; 2023 PramaIA LogService</p>
    </footer>

